from sortedcontainers import SortedList

class Solution:
    def longestSubarray(self, nums, limit):
        slist = SortedList()
        left = 0
        res = 0
        for right in range(len(nums)):
            slist.add(nums[right])
            while slist[-1] - slist[0] > limit:
                slist.remove(nums[left])
                left += 1
            res = max(res, right - left + 1)
        return res

if __name__ == "__main__":
    nums = list(map(int, input("Enter the list of numbers (space-separated): ").split()))
    limit = int(input("Enter the limit: "))
    solution = Solution()
    print("The length of the longest subarray is:", solution.longestSubarray(nums, limit))

